{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
  
      /* Path Aliases - Kiểm tra kỹ phần này */
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@pages/*": ["pages/*"],
        "@features/*": ["features/*"],
        "@store/*": ["store/*"],
        "@services/*": ["services/*"],
        "@hooks/*": ["hooks/*"],
        "@layouts/*": ["layouts/*"],
        "@utils/*": ["utils/*"],
        "@config/*": ["config/*"],
        "@routes/*": ["routes/*"],
        "@lib/*": ["lib/*"],
        "@assets/*": ["assets/*"],
        "@styles/*": ["styles/*"],
        "@types/*": ["types/*"] // Phần tử cuối cùng trong paths không có dấu phẩy
      } // Dấu ngoặc này đóng "compilerOptions"
    },
    "include": ["src"],
    // "references": [{ "path": "./tsconfig.node.json" }]
  } // Dấu ngoặc này đóng toàn bộ file JSON